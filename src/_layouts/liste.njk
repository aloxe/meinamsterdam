{% from './macros/readMoreButton.njk' import readMore with context %}

{% extends './base.njk' %}

  {% block header %}
    {% if content %}
      <div id="maincontent">
        {% include "header.njk" %}
      </div> 
    {% endif %}
  {% endblock %}
        
  {% block content %}
  {% if content %}
    <article id="maincontent" data-pagefind-body>
      {{ content | safe }}
    </article>
  {% endif %}

  {# initiate values for categories and tags #}
  {% if revue %}
    {% set posts = revue %}
    {% set paginate = pagination %}
  {% else %}
    {% set posts = revueTags.posts %}
    {% set paginate = revueTags.subPagination %}
  {% endif %}

  <section class="index"> {# use default mkdn class for styling  #}
    {%- for post in posts %}
      <h2 class="mb-0.5"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <div class="flex-row -mt-2">
        {% if revueTags and post.data.categorie and post.date %}
          <em class="text-text-light">in <a href="/{{ post.data.categorie }}/" class="text-text-light">{{ post.data.categorie }}</a> le {{ post.date | date }}</em> 
        {% else %}
          <em class="text-text-light">le {{ post.date | date }}</em>
        {% endif %}
        {% if post.data.tags %}
          {% for tag in post.data.tags %}
            <em class="text-primary text-xs">🏷</em> <em class="text-text-light text-xs"><a href="/tag/{{ tag | slugify }}/">{{ tag }}</a></em>
          {% endfor %}
        {% endif %}
      </div>
    {%- endfor %}

    {% if paginate.href.previous %}
      <div class="border-text-light [&&]:text-text-light border-1 rounded-2xl p-1 px-2 block float-left mt-10">
          <a href="{{paginate.href.previous}}" class="text-text-light!"> ← billets précédents </a>
      </div>
    {% endif %}
    {% if paginate.href.next %}
      <div class="border-text-light [&&]:text-text-light border-1 rounded-2xl p-1 px-2 block float-right mt-10">
          <a href="{{paginate.href.next}}" class="text-text-light!"> billets suivants → </a>
      </div>
    {% endif %}
    {% if paginate.pages.length > 1 %}
      <div class="[&&]:text-text-light p-1 px-2 center m-auto w-35 mt-10">
        Page {{ paginate.pageNumber+1 }} sur {{ paginate.pages.length }}
      </div>
    {% endif %}

  </section>
{% endblock %}
